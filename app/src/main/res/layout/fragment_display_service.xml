<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvServiceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bảng giá dịch vụ"
            android:textColor="@color/dark_green"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- TableLayout cho danh sách dịch vụ và giá -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:background="#FFFFFF"
            android:padding="1dp">

            <!-- Header Row -->
            <TableRow
                android:background="@color/dark_green"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Tên dịch vụ"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giá"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:padding="8dp"/>
            </TableRow>

            <!-- Service Item 1 -->
            <TableRow
                android:background="@drawable/cell_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Thuê vợt"
                    android:textColor="@color/dark_green"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30.000đ"
                    android:textColor="@android:color/black"
                    android:gravity="right"
                    android:padding="8dp"/>
            </TableRow>

            <!-- Service Item 2 -->
            <TableRow
                android:background="@drawable/cell_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Thuê giày"
                    android:textColor="@color/dark_green"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20.000đ"
                    android:textColor="@android:color/black"
                    android:gravity="right"
                    android:padding="8dp"/>
            </TableRow>

            <!-- Service Item 3 -->
            <TableRow
                android:background="@drawable/cell_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Nước uống"
                    android:textColor="@color/dark_green"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15.000đ"
                    android:textColor="@android:color/black"
                    android:gravity="right"
                    android:padding="8dp"/>
            </TableRow>

            <!-- Service Item 4 -->
            <TableRow
                android:background="@drawable/cell_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Thuê bóng (hộp)"
                    android:textColor="@color/dark_green"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50.000đ"
                    android:textColor="@android:color/black"
                    android:gravity="right"
                    android:padding="8dp"/>
            </TableRow>

            <!-- Service Item 5 -->
            <TableRow
                android:background="@drawable/cell_border"
                android:padding="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Huấn luyện viên (1 giờ)"
                    android:textColor="@color/dark_green"
                    android:padding="8dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200.000đ"
                    android:textColor="@android:color/black"
                    android:gravity="right"
                    android:padding="8dp"/>
            </TableRow>

        </TableLayout>

        <!-- Chú thích -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Giá có thể thay đổi tùy thời điểm"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic"
            android:gravity="right"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
