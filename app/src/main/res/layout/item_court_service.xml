<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Slider Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerCourtImages"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Indicators -->
            <LinearLayout
                android:id="@+id/layoutIndicators"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp" />

            <!-- Map Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:layout_margin="12dp"
                android:contentDescription="Map"
                app:fabCustomSize="40dp"
                app:srcCompat="@drawable/map"
                app:tint="@android:color/white"
                app:backgroundTint="#4CAF50" />
        </FrameLayout>

        <!-- Club Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Club Logo -->
            <ImageView
                android:id="@+id/imgClubLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="Club Logo"
                android:src="@drawable/logo" />

            <!-- Club Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvClubName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CLUB NAME"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Địa chỉ"
                    android:textColor="#FF9800"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:contentDescription="Opening Hours"
                            android:src="@drawable/dongho" />

                        <TextView
                            android:id="@+id/tvOpenTime"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginStart="4dp"
                            android:text="06:00 - 23:00"
                            android:textColor="#757575"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:contentDescription="Phone"
                            android:src="@drawable/dienthoai" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="104dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="4dp"
                            android:text="0348822626"
                            android:textColor="#4CAF50"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Book Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#FFD429"
                android:minWidth="0dp"
                android:paddingHorizontal="12dp"
                android:text="DỊCH VỤ"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>