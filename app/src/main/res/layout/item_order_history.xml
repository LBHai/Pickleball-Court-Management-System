<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Row 1: "Đơn ngày" (trái) + Trạng thái (phải) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- "Đơn ngày" bo góc, nền xanh -->
            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_green"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Đơn ngày"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- Khoảng trống đẩy status sang phải -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Trạng thái: "Chờ xác nhận", "Đã hủy", ... -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ xác nhận"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Tên CLB -->
        <TextView
            android:id="@+id/tvClubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Câu Lạc Bộ Cầu Lông - Pickleball - HD 12286"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Chi tiết thời gian -->
        <TextView
            android:id="@+id/tvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Chi tiết: C.Lông 3: 12h - 12h30 | Ngày 11/03/2025"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <!-- Địa chỉ -->
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Địa chỉ: Số nhà 190 đường 420 thôn Yên Mỹ - Bình Yên - Thạch Thất - HN"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
